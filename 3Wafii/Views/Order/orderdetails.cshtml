@model IEnumerable<_3Wafii.Dtos.OrderDto>
@{

    ViewBag.Title = "orderdetails";
    Layout = "~/Views/Shared/_ResturantLayout.cshtml";
}

<h2>orderdetails</h2>

<table id="Order" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Meal Id</th>
            <th>Meal Name</th>
            <th>Count</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section Scripts
{
    <script>

        $(document).ready(function () {
            var table = $("#Order").DataTable({
                ajax: {
                    url: "/api/orders/" +@Session["id"],
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "m_id"    
                    },
                    {
                        data: "m_name"
                    },
                    {
                        data: "m_count"
                    },
                    {
                        data: "price"
                    }
                ]
            });
        });



    </script>
}

