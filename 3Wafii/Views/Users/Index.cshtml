@model  IEnumerable<_3Wafii.Dtos.UsersDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>All Users.</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="Users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Constraint</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>

</table>
@section Scripts
{
    <script>

        $(document).ready(function () {
           var table = $("#Users").DataTable({
                ajax: {
                    url: "/api/Users",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "u_name",
                        render: function (data, type, Users) {
                            return "<a href='/Users/edit/" + Users.u_id + "'>" + Users.u_name + "</a>";
                        }
                    },
                    {
                        data: "email"
                    },
                    {
                        data: "constraint"
                    },
                    {
                        data: "u_id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' user-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#Users").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this user?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/users/" + button.attr("user-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });

        });



    </script>
}
